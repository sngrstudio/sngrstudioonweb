---
const response = await fetch('https://api.github.com/users/radenpioneer')
const user = await response.json()
---

<section id="namecard">
    <img src={user.avatar_url} alt={user.name} loading="lazy">
    <h2>{user.name}</h2>
    <p>{user.bio}</p>
</section>

<style lang="scss">
    #namecard {
        @apply lg:col-span-2 flex flex-col items-center gap-4;
        img {
            @apply w-40 h-40 rounded-full;
        }
        h2 {
            @apply font-bold text-center text-4xl;
        }
        p {
            @apply text-xl text-center;
        }
        svg {
            @apply fill-current text-gray-500 w-16 h-16;
        }
    }
</style>