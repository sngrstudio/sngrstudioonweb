---
import Header from './header.astro'
import logo from '@assets/logo-c.png?w=150'

const menu = [
  {
    name: 'Tentang',
    id: 'tentang',
  },
  {
    name: 'Karya',
    id: 'karya',
  },
]
---

<div class='drawer'>
  <input id='main-drawer' type='checkbox' class='drawer-toggle' />
  <div class='drawer-content'>
    <header>
      <Header menu={menu} />
    </header>
    <main class='min-h-screen pt-[64px]'>
      <slot></slot>
    </main>
    <footer></footer>
  </div>
  <div class='drawer-side'>
    <label for='main-drawer' class='drawer-overlay'></label>
    <nav class='bg-base-100 p-4 overflow-y-auto w-60'>
      <a href='/'>
        <img class='p-4' src={logo} alt='logo' />
      </a>
      <ul class='menu'>
        {menu.map((item) => (
          <li>
            <a href={`/${item.id}`}>{item.name}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</div>
