---
import Layout from './layout.astro'
import Video from '../components/homeVideo.svelte'

export interface Props {
    title: string
}
const {content} = Astro.props
---

<Layout title={content.title}>
    <div class="wrapper">
        <Video src={content.video}/>
        <div class="content">
            <slot/>
        </div>
    </div>
</Layout>

<style lang="scss">
    .wrapper {
        @apply relative;
    }
    :global(.content) {
        @apply bg-black bg-opacity-60 text-center absolute inset-0 w-screen h-screen mx-auto flex flex-col items-center justify-center;
        :global(h1) {
            @apply font-extrabold text-2xl lg:text-6xl text-white mb-4 px-4 max-w-screen-md;
        }
        :global(p) {
            @apply text-base lg:text-2xl text-white mt-2 px-4 max-w-screen-md;
        }
    }
</style>