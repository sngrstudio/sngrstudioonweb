---
import BaseLayout from './base.astro'

const { title } = Astro.props
const siteTitle = 'sngr.dev'
---
<BaseLayout title={`${title} | ${siteTitle}` || siteTitle}>
    <main>
        <slot/>
    </main>
</BaseLayout>

<style lang="scss">
    main {
        @apply max-w-screen-lg mx-auto px-4;
    }
</style>