---
import '@styles/global.scss'
import Header from '@components/header/header.tsx'

let { title } = Astro.props
---

<html lang='id'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <title>{title}</title>
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
  </head>
  <body>
    <Header client:load />
    <main>
      <slot></slot>
    </main>
  </body>
</html>
